                                android:layout_width="50dp"
                                android:layout_height="50dp"

                                android:layout_marginLeft="10dp"
                                android:background="@drawable/button_back"
                                android:shadowColor="#A8A8A8"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="5"
